{
  "manifest_version": 2,
  "name": "OCR Screen",
  "version": "0.0.1",

  "description": "OCR for web browser screen",
  "icons": {
    "16": "image/16.png",
    "48": "image/48.png",
    "128": "image/128.png"
  },
  "author": "joe-re",
  "browser_action": {
    "default_icon": "image/osc.png",
    "default_title": "OCR"
  },
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "permissions": [
    "activeTab",
    "clipboardRead"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
